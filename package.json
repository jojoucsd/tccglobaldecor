{
  "name": "tcc-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:pages": "cross-env GITHUB_PAGES=true next build && next export",
    "postbuild": "mkdir -p out && touch out/.nojekyll",
    "predeploy": "rm -rf out && npm run build",
    "deploy": "npm run build:pages && npx gh-pages -d out -b gh-pages -t true -m \"Deploy $(date -u +'%Y-%m-%dT%H:%M:%SZ')\""
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "^15.5.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
